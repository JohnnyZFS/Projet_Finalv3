<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewptumu"
        android:layout_width="273dp"
        android:layout_height="58dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="64dp"
        android:text="@string/planifier_tache_a_un_moment_ulterieur"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStatut2"
        android:layout_width="64dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:text="@string/statut"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewptumu" />

    <TextView
        android:id="@+id/textViewVitesse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="@string/vitesse"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatut2" />

    <TextView
        android:id="@+id/textViewDans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="@string/dans"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/spinneulterieur"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnacceill4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="12dp"
        android:text="@string/acceuil"
        app:layout_constraintBottom_toTopOf="@+id/buttonhorairement2"
        app:layout_constraintStart_toEndOf="@+id/spinnerVitesse4" />

    <Button
        android:id="@+id/buttonhorairement2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="72dp"
        android:text="@string/horairement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerVitesse4" />

    <Button
        android:id="@+id/buttonsauvegarder4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="104dp"
        android:text="@string/sauvegarder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerstatut4"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:entries="@array/spinner_on_off"
        app:layout_constraintStart_toEndOf="@+id/textViewStatut2"
        app:layout_constraintTop_toBottomOf="@+id/textViewptumu" />

    <Spinner
        android:id="@+id/spinnerVitesse4"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:entries="@array/spinner_vitesse"
        app:layout_constraintStart_toEndOf="@+id/textViewVitesse2"
        app:layout_constraintTop_toBottomOf="@+id/spinnerstatut4" />

    <Spinner
        android:id="@+id/spinneulterieur"
        android:layout_width="291dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="336dp"
        android:entries="@array/spinner_duree_courte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerVitesse4" />

</androidx.constraintlayout.widget.ConstraintLayout>